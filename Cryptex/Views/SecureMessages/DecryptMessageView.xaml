<UserControl
    x:Class="Cryptex.Views.SecureMessages.DecryptMessageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:Cryptex.Views.SecureMessages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="1000"
    FontFamily="Google Sans"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Styles/TextBoxStyles.xaml" />
                <ResourceDictionary Source="../../Styles/IconTitleStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <materialDesign:Card
            Grid.Column="0"
            Margin="15"
            Padding="10"
            materialDesign:ShadowAssist.ShadowDepth="Depth2"
            Background="#FAFAFA"
            UniformCornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="150" />
                    <RowDefinition Height="150" />
                </Grid.RowDefinitions>
                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                    <materialDesign:PackIcon
                        Margin="0"
                        Padding="0"
                        HorizontalAlignment="Center"
                        Kind="KeyArrowRight"
                        Style="{StaticResource IconTitle}" />
                    <TextBlock
                        Margin="0"
                        Padding="0"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        TextAlignment="Center"
                        TextWrapping="Wrap">
                        Импорт приватного ключа
                    </TextBlock>
                </StackPanel>

                <materialDesign:Card
                    Grid.Row="1"
                    Margin="15"
                    Padding="10"
                    materialDesign:ShadowAssist.ShadowDepth="Depth2"
                    Background="#FAFAFA"
                    UniformCornerRadius="5"
                    Visibility="{Binding KeyNameVisibility}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                            <materialDesign:PackIcon
                                Margin="0"
                                Padding="0"
                                HorizontalAlignment="Center"
                                Kind="Key"
                                Style="{StaticResource IconTitle}" />
                            <Label
                                Margin="0"
                                Padding="0"
                                HorizontalAlignment="Center"
                                FontSize="14"
                                FontWeight="Bold">
                                Выбранный ключ
                            </Label>
                        </StackPanel>
                        <StackPanel Grid.Row="1">
                            <TextBlock
                                FontSize="13"
                                Text="{Binding StringFormat=Название:\ {0}, Path=KeyName}"
                                TextWrapping="WrapWithOverflow" />
                            <TextBlock FontSize="13" TextWrapping="WrapWithOverflow">
                                Тип шифрования: RSA
                            </TextBlock>
                        </StackPanel>

                    </Grid>
                </materialDesign:Card>

                <ComboBox
                    Grid.Row="2"
                    Width="250"
                    Margin="0,3,0,0"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Приватный ключ"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding KeysCollection}"
                    SelectedIndex="{Binding SelectedKeyIndex}"
                    SelectedItem="{Binding SelectedKey, Mode=TwoWay}"
                    Style="{StaticResource InputComboBox}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Name, Mode=OneWay}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>

        </materialDesign:Card>
        <materialDesign:Card
            Grid.Column="1"
            Margin="15"
            Padding="10"
            materialDesign:ShadowAssist.ShadowDepth="Depth2"
            Background="#FAFAFA"
            IsEnabled="{Binding EncryptedTextCardIsEnabled}"
            UniformCornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition />
                    <RowDefinition Height="70" />
                </Grid.RowDefinitions>
                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                    <materialDesign:PackIcon
                        Margin="0"
                        Padding="0"
                        HorizontalAlignment="Center"
                        Kind="LockOutline"
                        Style="{StaticResource IconTitle}" />
                    <Label
                        Margin="0"
                        Padding="0"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold">
                        Ввод зашифрованного сообщения
                    </Label>
                </StackPanel>

                <StackPanel
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <Button
                        Width="150"
                        Margin="0,10,0,0"
                        Command="{Binding Decrypt}"
                        Content="Расшифровать"
                        Cursor="Hand"
                        IsEnabled="{Binding DecryptButtonIsEnabled}"
                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                    <ProgressBar
                        Margin="12,20,12,12"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsIndeterminate="True"
                        Style="{StaticResource MaterialDesignCircularProgressBar}"
                        Visibility="{Binding DecryptProgressBarVisibility}"
                        Value="0" />
                </StackPanel>
                <TextBox
                    Grid.Row="1"
                    VerticalAlignment="Stretch"
                    materialDesign:HintAssist.FloatingScale="0.95"
                    materialDesign:HintAssist.Hint="Зашифрованное сообщение"
                    BorderBrush="#44383838"
                    FontSize="13"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding EncryptedText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </Grid>

        </materialDesign:Card>
        <materialDesign:Card
            Grid.Row="0"
            Grid.Column="2"
            Margin="15"
            Padding="10"
            materialDesign:ShadowAssist.ShadowDepth="Depth2"
            Background="#FAFAFA"
            IsEnabled="{Binding PlainTextCardIsEnabled}"
            UniformCornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="150" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                    <materialDesign:PackIcon
                        Margin="0"
                        Padding="0"
                        HorizontalAlignment="Center"
                        Kind="LockOpenVariantOutline"
                        Style="{StaticResource IconTitle}" />
                    <Label
                        Margin="0"
                        Padding="0"
                        FontSize="14"
                        FontWeight="Bold">
                        Расшифрованное сообщение
                    </Label>
                </StackPanel>
                <TextBox
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    VerticalAlignment="Stretch"
                    materialDesign:HintAssist.FloatingScale="0.95"
                    materialDesign:HintAssist.Hint="Расшифрованное сообщение"
                    AcceptsReturn="True"
                    BorderBrush="#44383838"
                    FontSize="13"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding PlainText}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
